<% layout("/layouts/boilerplate") %>

<!-- Filters / Category icons -->
<div id="filters" class="mb-3">
  <% const categories = [
    { name: "Trending", icon: "fa-fire" },
    { name: "Rooms", icon: "fa-bed" },
    { name: "Iconic cities", icon: "fa-mountain-city" },
    { name: "Mountains", icon: "fa-mountain" },
    { name: "Castles", icon: "fa-chess-rook" },
    { name: "Swimming", icon: "fa-person-swimming" },
    { name: "Camping", icon: "fa-campground" },
    { name: "Farms", icon: "fa-cow" },
    { name: "Arctic", icon: "fa-snowflake" },
    { name: "Beaches", icon: "fa-sailboat" },
    { name: "Heritage", icon: "fa-landmark-dome" },
    { name: "Ferry", icon: "fa-ship" }
  ]; %>

  <% categories.forEach(cat => { %>
    <div class="filter <%= category === cat.name ? 'active' : '' %>" data-cat="<%= cat.name %>">
      <div><i class="fa-solid <%= cat.icon %>"></i></div>
      <p><%= cat.name %></p>
    </div>
  <% }) %>

  <div class="tax-toggle ms-auto">
    <div class="form-check-reverse form-switch d-flex align-items-center">
      <input class="form-check-input me-2" type="checkbox" role="switch" id="flexSwitchCheckDefault">
      <label class="form-check-label" for="flexSwitchCheckDefault">Display total after taxes</label>
    </div>
  </div>
</div>

<!-- Listings grid -->
<div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4 mt-3">
  <% if (allListings.length === 0) { %>
    <p>No listings found for this filter.</p>
  <% } %>
  <% for (let listing of allListings) { %>
    <div class="col">
      <a href="/listings/<%= listing._id %>" class="listing-link text-decoration-none">
        <div class="card h-100 listing-card">
          <div class="listing-img-wrapper">
            <img
              src="<%= listing.image && listing.image.url ? listing.image.url : '/images/placeholder.png' %>"
              alt="listing_image"
              class="card-img-top listing-img"
            />
          </div>
          <div class="card-body">
            <p class="card-text mb-0">
              <b class="d-block"><%= listing.title %></b>
              <span class="text-muted">&#8377; <%= listing.price ? listing.price.toLocaleString("en-IN") : "0" %> / night</span>
              <i class="tax-info"> &nbsp; &nbsp; + 18% GST</i>
            </p>
          </div>
        </div>
      </a>
    </div>
  <% } %>
</div>

<style>
  .filter.active {
    border-bottom: 2px solid #fe424d;
    font-weight: bold;
    color: #fe424d;
  }
</style>

<script>
  // tax toggle behavior
  const taxSwitch = document.getElementById("flexSwitchCheckDefault");
  if (taxSwitch) {
    taxSwitch.addEventListener("click", () => {
      const taxInfo = document.getElementsByClassName("tax-info");
      for (let info of taxInfo) {
        info.style.display = (info.style.display !== "inline") ? "inline" : "none";
      }
    });
  }

  // category filter clicks: navigate with query param
  document.querySelectorAll('.filter').forEach(el => {
    el.addEventListener('click', () => {
      const cat = el.getAttribute('data-cat');
      const params = new URLSearchParams(window.location.search);
      params.set('category', cat);
      window.location.href = '/listings?' + params.toString();
    });
  });
</script>

